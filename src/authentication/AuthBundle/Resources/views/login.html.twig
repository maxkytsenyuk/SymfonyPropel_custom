{% extends 'base.html.twig' %}
{% block body %}

    <div class="panel panel-success">
        <div class="panel-heading">
            <h3>Login</h3>
        </div>
        <div class="panel-body">
            {% if error is defined%}
                <div class="alert alert-danger">

                    {{ error }}

                </div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">
            <div class="form-group">
            <label for="u_name">Enter Username:</label>
            <input type="text" name="u_name" class="form-control" id="u_name">
            </div>
            <div class="form-group">
            <label for="p_word">Enter Password:</label>
            <input type="password" name="p_word" class="form-control" id="p_word">
            </div>

            <button type="submit" class="btn btn-info pull-left">Sign In</button>
            </form>

        </div>
    </div>
{% endblock %}